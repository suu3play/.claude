<Window x:Class="DeskAppKit.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskAppKit.Client"
        mc:Ignorable="d"
        Title="DeskAppKit - メインメニュー" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー（タイトルバーとメニューバーの統合） -->
        <Border Grid.Row="0" Background="#2196F3" Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- アプリケーション名 -->
                <TextBlock Grid.Column="0" Text="DeskAppKit" FontSize="18" FontWeight="Bold"
                           Foreground="White" VerticalAlignment="Center" Margin="0,0,24,0"/>

                <!-- メニュー項目 -->
                <Menu Grid.Column="1" Background="Transparent" VerticalAlignment="Center">
                    <MenuItem Header="設定(_S)" Command="{Binding ShowSettingsCommand}"
                              Foreground="White" Padding="12,6">
                        <MenuItem.ToolTip>
                            <ToolTip Content="アプリケーション設定"/>
                        </MenuItem.ToolTip>
                    </MenuItem>
                    <MenuItem Header="診断(_D)" Command="{Binding ShowDiagnosticsCommand}"
                              Foreground="White" Padding="12,6">
                        <MenuItem.ToolTip>
                            <ToolTip Content="ヘルスチェック・ログ表示"/>
                        </MenuItem.ToolTip>
                    </MenuItem>
                    <MenuItem Header="バージョン情報(_A)" Command="{Binding ShowAboutCommand}"
                              Foreground="White" Padding="12,6">
                        <MenuItem.ToolTip>
                            <ToolTip Content="アプリケーション情報"/>
                        </MenuItem.ToolTip>
                    </MenuItem>
                </Menu>

                <!-- 右側の情報 -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding WelcomeMessage}" Foreground="White"
                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <Button Content="ログアウト" Command="{Binding LogoutCommand}"
                            Background="#1976D2" Foreground="White" BorderThickness="0"
                            Padding="12,6" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- メインコンテンツエリア -->
        <Grid Grid.Row="1" Margin="24">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="DeskAppKit" FontSize="36" FontWeight="Bold" Foreground="#2196F3"
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="デスクトップアプリケーション共通基盤" FontSize="18" Foreground="#666"
                           HorizontalAlignment="Center" Margin="0,0,0,32"/>
                <TextBlock Text="上部メニューから操作を選択してください" FontSize="14" Foreground="#888"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- フッター -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="16,8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <TextBlock Text="DeskAppKit v1.0.0 - デスクトップアプリケーション共通基盤"
                       FontSize="11" Foreground="#777" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
