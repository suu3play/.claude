{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "permissions": {
        "allow": [
            // === Git操作 ===
            "Bash(git add:*)",
            "Bash(git branch:*)",
            "Bash(git checkout:*)",
            "Bash(git commit:*)",
            "Bash(git log:*)",
            "Bash(git mv:*)",
            "Bash(git pull:*)",
            "Bash(git push:*)",
            "Bash(git rebase:*)",
            "Bash(git remote get-url:*)",
            "Bash(git stash:*)",

            // === GitHub CLI ===
            "Bash(gh issue:*)",
            "Bash(gh label:*)",
            "Bash(gh pr create:*)",
            "Bash(gh pr list:*)",
            "Bash(gh pr merge:*)",
            "Bash(gh pr view:*)",
            "Bash(gh repo view:*)",

            // === Node.js / npm ===
            "Bash(node:*)",
            "Bash(npm create:*)",
            "Bash(npm init:*)",
            "Bash(npm install:*)",
            "Bash(npm run:*)",
            "Bash(npm uninstall:*)",
            "Bash(npx create-react-app:*)",
            "Bash(npx playwright:*)",
            "Bash(npx tailwindcss init:*)",

            // === .NET ===
            "Bash(dotnet add:*)",
            "Bash(dotnet build:*)",
            "Bash(dotnet ef migrations add:*)",
            "Bash(dotnet new:*)",
            "Bash(dotnet run:*)",
            "Bash(dotnet sln add:*)",
            "Bash(dotnet test:*)",
            "Bash(dotnet tool install:*)",
            "Bash(dotnet tool list:*)",

            // === Python ===
            "Bash(pip install:*)",
            "Bash(pip uninstall:*)",
            "Bash(python:*)",

            // === Flutter ===
            "Bash(flutter analyze:*)",

            // === 一般コマンド ===
            "Bash(cat:*)",
            "Bash(cp:*)",
            "Bash(curl:*)",
            "Bash(find:*)",
            "Bash(grep:*)",
            "Bash(ls:*)",
            "Bash(mkdir:*)",
            "Bash(mv:*)",
            "Bash(rm:*)",
            "Bash(sed:*)",
            "Bash(timeout:*)",
            "Bash(tree:*)"
        ],
        "deny": [],
        "defaultMode": "acceptEdits"
    },
    "hooks": {
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "powershell -Command \"[console]::beep(800, 200); [console]::beep(1000, 150)\""
                    }
                ]
            }
        ],
        "Notification": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "powershell -Command \"[console]::beep(600, 100); [console]::beep(500, 100)\""
                    }
                ]
            }
        ]
    },
    "statusLine": {
        "type": "command",
        "command": "~/.claude/statusline.sh"
    }
}
